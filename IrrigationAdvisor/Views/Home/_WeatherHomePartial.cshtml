@model IrrigationAdvisor.ViewModels.Weather.WeatherDataToShow

@{
    ViewBag.Title = "Weather";
}
 
@{ if (Model != null)
    {
       
    <div class="flatWeatherPlugin">
        <h2>@Model.city</h2>
        <div class="wiToday">
            <div class="wiIconGroup">
                <div class="rainy">
                    <img src="@Model.urlImage" alt="" />
                </div>
                <p class="wiText">@Model.conditions</p>
            </div>
            <p class="wiTemperature">@Model.averageTemperature <sup>ºC</sup></p>

            <div class="wiDetail">
                <p class="wiDay">@Model.day</p>
                <ul class="astronomy">
                    <li class="sunrise">
                        <img src="../images/icons-weather/sunrise.png" alt="" />
                        @Model.sunriseTime
                    </li>
                    <li class="sunrise">
                        <img src="../images/icons-weather/sunrise.png" alt="" />
                        @Model.sunsetTime
                    </li>
                </ul>
                <ul class="temp">
                    <li>Max @Model.high <sup>ºC</sup></li>
                    <li>Min @Model.low <sup>ºC</sup></li>
                </ul>
            </div>
            <div class="wiDetail">
                <ul class="atmosphere">
                    <li class="humidity">
                        <img src="../images/icons-weather/humidity.png" alt="" />
                        Humedad: @Model.relativeHumidity  
                    </li>
                    <li class="radiaction">
                        <img src="../images/icons-weather/radiaction.png" alt="" />
                        Presión: @Model.pressure HPa
                    </li>
                </ul>
                <ul class="atmosphere">
                    <li class="wind">
                        Viento: @Model.averageWind  km/h
                        <img src="../images/icons-weather/wind.png" alt="" />
                    </li>
                    <li class="eto">
                        Visibilidad: @Model.visibility km
                        <img src="../images/icons-weather/eto.png" alt="" />
                    </li>
                </ul>
            </div>
        </div>


        @foreach (var item in @Model.weatherDataItemList)
        {
            <ul class="wiForecasts">
                <li class="wiDay">
                    <span>  @item.weekday</span>
                    <ul class="wiForecast">
                        <img src="@item.urlImage" style="height:20px;" alt=" " />
                        <li class="wiMax">
                        <li>Máx: @item.high <sup>ºC</sup>
                        </li>
                        <li class="wiMin"> Min: @item.low <sup>ºC</sup>
                        </li>
                    </ul>
                </li>
            </ul>
        }

    </div>

    }
}



