@model IrrigationAdvisor.ViewModels.Home.HomeViewModel
@using IrrigationAdvisor.Models.Utilities
@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" type="text/css" href="../css/flatWeatherPlugin.css">
<link rel="stylesheet" type="text/css" href="../css/modal.css">
<link rel="stylesheet" type="text/css" href="../css/style-1.css">
<link rel="stylesheet" type="text/css" href="../css/md-font.css">
<link href="~/css/shared.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/js/Home.js"></script>
<script src="~/Scripts/moment.js"></script>

<div class="modal fade" tabindex="-1" role="dialog" id="loading">
    <div class="modal-dialog" role="document">
        
            <!-- Content Bar -->
            <div id="floatingCirclesG">
                <div class="f_circleG" id="frotateG_01"></div>
                <div class="f_circleG" id="frotateG_02"></div>
                <div class="f_circleG" id="frotateG_03"></div>
                <div class="f_circleG" id="frotateG_04"></div>
                <div class="f_circleG" id="frotateG_05"></div>
                <div class="f_circleG" id="frotateG_06"></div>
                <div class="f_circleG" id="frotateG_07"></div>
                <div class="f_circleG" id="frotateG_08"></div>
            </div>
        
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@{
    DateTime dateValue = Convert.ToDateTime(ViewBag.DateOfReference);
}

<input type="hidden" value="@Utils.GetDateTimeForClientScripts(Model.MaxDateOfReference)" id="maxDateOfReference"/>
<!-- TODO: Change when implement multiple farms -->
<input type="hidden" value="@ViewBag.SpecieId" id="specieId"/>
<input type="hidden" value="@Utils.GetDateTimeForClientScripts(Model.MinDateOfReference)" id="minDateOfReference" />

<section class="content-bar ps-container">
    <div class="container">
        <div class="col-md-11">
            <div class="col-md-11">
                <ul class="bar-resp">
                    @{ if (Model.ErrorViewModel == null)
                        {
                            <li> <a> <em class="icon md-flag"></em> Establecimiento: "@Model.DefaultFarmViewModel.Name" </a> </li>
                            <li> <a> <em class="icon md-crop"></em> Área bajo riego: @Model.DefaultFarmViewModel.Has há </a> </li>
                            <li> <a> <em class="icon md-time"></em> Última actualización: @(dateValue.ToShortDateString()) </a> </li>
                        }

                    }
                </ul>
            </div>
        </div>
        
        
    </div>
    <div class="ps-scrollbar-x-rail" style="width: 1343px; display: none; left: 0px;"><div class="ps-scrollbar-x" style="left: 0px; width: 0px;"></div></div><div class="ps-scrollbar-y-rail" style="top: 0px; height: 53px; display: none;"><div class="ps-scrollbar-y" style="top: 0px; height: 0px;"></div></div>
</section>
<!-- Grid Pivots -->
<section class="profile">
    
    <div class="container">
        @{
            if (Model.ErrorViewModel == null)
            {
                <div class="row">

                </div>
                @:<div class="row">
        <div class="col-md-12" style="padding-left:0">
            <div class="avatar-acount">
                <div class="info-acount">
                    <h3 class="fa fa-dashboard fa-2x"> Pivots </h3>

                    <div class="">

                        
                        <div style="color:black" class="btn-md">
                            <div class="col-xs-8 col-md-5 col-lg-5">
                                @*<span class="form-control col-md-4">@(dateValue.ToShortDateString())</span>*@
                                <input type="date" id="txtDateOfReference" class="form-control" value="@Model.DateOfReferenceAsLocal()" style="display:inline-block" />
                                
                                <a class="btn go btn-pivots btn-md btn-md 5" href="./AddDateOfReference" id="dateOfReferenceBtn" style="display:inline-block">+</a>
                                <button class="btn go btn-pivots " id="dateOfReferenceBtn2" style="display:inline-block">Actualizar</button>
                                <select class="form-control margin-bottom-10" id="lstFarms">
                                   
                                </select>
                            </div>
                            <div style="float:right">
                                <button class="btn go btn-pivots btn-md" id="addRainModal">
                                    <span class="glyphicon glyphicon-plus"></span>Agregar lluvia
                                </button>
                            </div>
                            <div style="float:right">
                                <button class="btn go btn-pivots btn-md" id="addIrrigationModal">
                                    <span class="glyphicon glyphicon-plus"></span>Agregar riego
                                </button>
                            </div>
                        </div>
                        
                        
                        @{ if (Model.IsUserAdministrator)
                           {
                        <p>
                            <button class="btn go btn-pivots btn-md" style="float:right" id="addPhenoModal">
                                <span class="glyphicon glyphicon-plus"></span>Agregar Fenología
                            </button>
                        </p>
                           }

                        }

                    </div>
                    <!-- Grid -->
                    <div class="table-asignment">
                        <!-- Table -->
                        <div class="tab-content">
                            <!-- table header -->
                            <div class="tab-pane fade in active">
                                <div class="table-wrap">
                                    <!-- table head -->
                                    <!-- End Grid Head -->
                                    <!-- Table -->
                                    <div class="table-body">
                                        <!--table-->
                                        <table cellspacing="10" class="main-table-advisor">
                                            <thead>
                                                <tr>
                                                    @{ Html.RenderAction("FrontPageHeaderPartial", "Home"); }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ Html.RenderAction("FrontPagePartial", "Home"); }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Table -->
                    </div>
                    <!-- End Grid Pivot -->
                </div>
            </div>
            <!--reference-->
            <div class="container">
                <div class="row">
                    <div class="col-md-12" style="padding-left: 0">
                        <div class="mod-reference">
                            <div class="title-reference">
                                <h3 class="fa fa-list fa-2x"> Referencias</h3>
                                <div class="regado col-md-3"><h5>Campo regado</h5></div>
                                <div class="proximo-riego col-md-3"><h5>Próximo riego</h5></div>
                                <div class="lluvia-registrada col-md-3"><h5>Lluvia</h5></div>
                                <div class="por-defecto col-md-3"><h5>Sin Riego</h5></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--  Weather & Map container -->
            <div class="container">
               @{if (Model.IsUserAdministrator)
                 {
                   <div class="row">
                    <!-- map-->
                    <div class="col-md-6">
                        <div id="embed-map-canvas">
                            <iframe  frameborder="0" style="width: 100%; height: 472px; margin-top: 10px"
                                    src="http://maps.google.com/maps?z=13&t=h&q=loc:@Model.GetDefaultFarmLatitude(),+@Model.GetDefaultFarmLongitude()&output=embed"></iframe>
                        </div>

                    </div>
                    <!-- end map-->

                    <!-- weather-->
                    <div class="col-md-6">
                        <section class="pivot-ub">
                            <div class="container-images">
                                <div>
                                    <div class="location-pivot">
                                        <h3 class="fa fa-cloud fa-2x"> Clima </h3>
                                    </div>
                                    <div id="example">
                                        @{ Html.RenderAction("WeatherHomePartial", "Home"); }
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- end weather-->
                </div>
                 }
                }
            </div>
            <!-- end Weather & Map container -->
            <!-- end reference-->
        </div>
        <div class="row">
            <!-- location pivots-->
            <section class="pivot-ub">
                <div class="container-images-location">
                    <div class="col-md-4">
                        
                        @*<div class="location-pivot">
                                <h3 class="fa fa-location-arrow fa-2x"> Ubicación </h3>
                            </div>
                            <div class="box-images"></div>*@
                    </div>
                </div>
            </section>
            <!-- end Location pivots-->
            
        </div>
    
            }
            else
            {
                Html.RenderPartial("~/Views/Errors/_Error.cshtml", Model.ErrorViewModel);

            }
}
      
      
        <div class="row">
            <div class="col-md-12">
                <!-- modal agregar riego--->

                    <div id="modal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="header">
                                    <h2>Agregar riego</h2>
                                </div>
                                <div class="copy">
                                    <p>  </p>
                                    <form role="form" id="irrigationForm">
                                        <div class="form-group">
                                            <input type="number" placeholder="Ingrese el riego en 'mm'" class="form-control" id="irrigationMilimeters" name="irrigationMilimeters" min="1" max="100">
                                            <span id="irrigationMilimetersError" class="red-color"></span>
                                            <br />
                                            <div class="dropdown">
                                                Seleccionar Fecha
                                                <select id="irrigationDate" class="form-control">
                                                    <option value="@(dateValue.AddDays(2).Month + "/" + dateValue.AddDays(2).Day + "/" + dateValue.AddDays(2).Year)">@(dateValue.AddDays(2).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(1).Month + "/" + dateValue.AddDays(1).Day + "/" + dateValue.AddDays(1).Year)">@(dateValue.AddDays(1).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(0).Month + "/" + dateValue.AddDays(0).Day + "/" + dateValue.AddDays(0).Year)">@(dateValue.AddDays(0).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-1).Month + "/" + dateValue.AddDays(-1).Day + "/" + dateValue.AddDays(-1).Year)">@(dateValue.AddDays(-1).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-2).Month + "/" + dateValue.AddDays(-2).Day + "/" + dateValue.AddDays(-2).Year)">@(dateValue.AddDays(-2).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-3).Month + "/" + dateValue.AddDays(-3).Day + "/" + dateValue.AddDays(-3).Year)">@(dateValue.AddDays(-3).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-4).Month + "/" + dateValue.AddDays(-4).Day + "/" + dateValue.AddDays(-4).Year)">@(dateValue.AddDays(-4).ToShortDateString())</option>
                                                </select>
                                                <br />
                                            </div>
                                            <br />
                                            <div class="dropdown">
                                                Seleccionar pivot
                                                <select id="IrrigationUnitIrrigation" class="form-control">
                                                    <option value="-1">Todos</option>
                                                    @foreach (var item in Model.IrrigationUnitViewModelList)
                                                    {
                                                        <option value="@item.IrrigationUnitId">@item.Name</option>

                                                    }
                                                </select>


                                                <br />
                                            </div>

                                        </div>
                                    </form>
                                </div>
                                <div class="cf footer">
                                    <p> <buttom class="btn btn-style-2" id="CancelIrrigation">Cancelar</buttom></p>
                                    <buttom class="btn btn-success" id="SaveIrrigation" disabled>Guardar</buttom>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end modal agregar riego --->
                    <!-- modal agregar lluvia--->
                    <div id="modal-lluvia" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="header">
                                    <h2>Agregar lluvia</h2>
                                </div>
                                <div class="copy">
                                    <p>  </p>

                                    <div class="form-group">
                                        <input type="number" placeholder="Ingrese la lluvia en 'mm'" class="form-control" id="rain" min="1" max="999">
                                        <span id="rainMilimetersError" class="red-color"></span>
                                        <br />
                                        <div class="dropdown">
                                            @*<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Seleccionar Día
                        <span class="caret"></span>
                        </button>
                                            *@
                                            Seleccionar Día
                                            <select id="rainDate" class="form-control">
                                                <option value="@(dateValue.AddDays(-1).Month + "/" + dateValue.AddDays(-1).Day + "/" + dateValue.AddDays(-1).Year)">@(dateValue.AddDays(-1).ToShortDateString())</option>
                                                <option value="@(dateValue.AddDays(-2).Month + "/" + dateValue.AddDays(-2).Day + "/" + dateValue.AddDays(-2).Year)">@(dateValue.AddDays(-2).ToShortDateString())</option>
                                                <option value="@(dateValue.AddDays(-3).Month + "/" + dateValue.AddDays(-3).Day + "/" + dateValue.AddDays(-3).Year)">@(dateValue.AddDays(-3).ToShortDateString())</option>
                                                <option value="@(dateValue.AddDays(-4).Month + "/" + dateValue.AddDays(-4).Day + "/" + dateValue.AddDays(-4).Year)">@(dateValue.AddDays(-4).ToShortDateString())</option>
                                            </select>

                                            <br />
                                        </div>
                                        <br />
                                        <div class="dropdown">
                                            Seleccionar Unidad de Riego
                                            <select id="IrrigationUnit" class="form-control">
                                                <option value="-1">Todos</option>
                                                @foreach (var item in Model.IrrigationUnitViewModelList)
                                                {
                                                    <option value="@item.IrrigationUnitId">@item.Name</option>

                                                }
                                            </select>

                                            <br />
                                        </div>

                                    </div>

                                </div>
                                <div class="cf footer">
                                    <p>
                                        <button class="btn  btn-style-2" id="CancelRain">
                                            Cancelar
                                        </button>
                                    </p>
                                    <button id="SaveRain" class="btn  btn-style-2" disabled>
                                        Guardar
                                    </button>

                                </div>
                            </div>
                        </div>
                     
                        @*<div class="overlay"></div>*@
                    </div>
                    <!-- end modal agregar lluvia --->
                    <!-- modal agregar fenologia--->
                    <div id="modal-fenologia" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="header">
                                    <h2>Agregar Fenología</h2>
                                </div>
                                <div class="copy">
                                    <p> </p>
                                    <form role="form">
                                        <div class="form-group">
                                            <div class="dropdown">
                                                Seleccione una Fecha
                                                <select id="phenoDate" class="form-control">
                                                    @for (int i = -1; i >= -IrrigationAdvisor.Models.Data.InitialTables.DAYS_PREVIOUS_TO_CHANGE_PHENOLOGICAL_STAGE; i--)
                                                {
                                                        <option value="@(dateValue.AddDays(i).Month + "/" + dateValue.AddDays(i).Day + "/" + dateValue.AddDays(i).Year)">@(dateValue.AddDays(i).ToShortDateString())</option>
                                                }

                                                </select>
                                                <br />
                                            </div>
                                            <br />
                                            <div class="dropdown">
                                                Contexto de cosecha
                                                <select id="CropIrriWeatherPheno" class="form-control">
                                                    @foreach (var item in Model.CropIrrigationWeatherViewModelList)
                                                {
                                                        <option value="@item.CropIrrigationWeatherId">@item.CropIrrigationWeatherName</option>
                                                }
                                                </select>

                                                <br />
                                            </div>
                                            <br />
                                            <div class="dropdown">
                                                Seleccionar Fenología
                                                <select id="StagePheno" class="form-control"></select>
                                                <br />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="cf footer">
                                    <p> <button class="btn  btn-style-2" id="CancelPheno">Cancelar</button></p>
                                    <button class="btn btn-success" id="savePhenoBtn">Guardar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end modal agregar fenologia --->
                
            </div>
            
            
        </div>
    </div>
        </div>
    
</section>
 
