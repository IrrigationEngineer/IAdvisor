                                                    <option value="-1">Todos</option>
                                                    @foreach (var item in Model.IrrigationUnitViewModelList)
                                                    {
                                                        <option value="@item.IrrigationUnitId">@item.Name</option>

                                                    }
                                                </select>

                                                <br />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="cf footer">
                                    <p> <a href="#" class="btn  btn-style-2" >Cancelar</a></p>
                                    <a type="button" class="btn btn-success"  href="#" disabled>Guardar</a>
                                </div>
