<!-- Content Bar -->

<section class="content-bar ps-container">
    <div class="container">
        <ul class="bar-resp" style="width: 713px;">
            @{ if (Model.ErrorViewModel == null)
                {
                    <li> <a> <em class="icon md-flag"></em> Establecimiento: "@Model.DefaultFarmViewModel.Name" </a> </li>
                    <li> <a> <em class="icon md-crop"></em> Área bajo riego: @Model.DefaultFarmViewModel.Has há </a> </li>
                    <li> <a> <em class="icon md-time"></em> Última actualización: @Model.DateOfReference </a> </li>
                }

            }
            
        </ul>
    </div>
    <div class="ps-scrollbar-x-rail" style="width: 1343px; display: none; left: 0px;"><div class="ps-scrollbar-x" style="left: 0px; width: 0px;"></div></div><div class="ps-scrollbar-y-rail" style="top: 0px; height: 53px; display: none;"><div class="ps-scrollbar-y" style="top: 0px; height: 0px;"></div></div>
</section>

@{ 
    DateTime dateValue = Convert.ToDateTime(ViewBag.DateOfReference);
}
