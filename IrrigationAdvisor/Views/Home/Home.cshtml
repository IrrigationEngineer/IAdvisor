                                                    <option value="@(dateValue.Month + "/" + dateValue.Day + "/" + dateValue.Year)">@(dateValue.ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-1).Month + "/" + dateValue.AddDays(-1).Day + "/" + dateValue.AddDays(-1).Year)">@(dateValue.AddDays(-1).ToShortDateString())</option>
