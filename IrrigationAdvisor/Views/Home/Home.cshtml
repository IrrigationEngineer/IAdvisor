                                                    <option value="@(dateValue.AddDays(-2).Month + "/" + dateValue.AddDays(-2).Day + "/" + dateValue.AddDays(-2).Year)">@(dateValue.AddDays(-2).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-3).Month + "/" + dateValue.AddDays(-3).Day + "/" + dateValue.AddDays(-3).Year)">@(dateValue.AddDays(-3).ToShortDateString())</option>
                                                    <option value="@(dateValue.AddDays(-4).Month + "/" + dateValue.AddDays(-4).Day + "/" + dateValue.AddDays(-4).Year)">@(dateValue.AddDays(-4).ToShortDateString())</option>
                                                </select>
                                                
                                                <br />
                                            </div>
                                            <br />
                                            <div class="dropdown">
                                                @*<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                    Seleccionar Unidad de Riego
                                                    <span class="caret"></span>
                                                </button>*@
                                                Seleccionar Unidad de Riego
                                                    <select id="IrrigationUnit">
                                                        <option value="-1">Todos</option>
                                                       @foreach (var item in Model.IrrigationUnitViewModelList)
                                                        {
                                                            <option value="@item.IrrigationUnitId">@item.Name</option>

                                                        }
                                                    </select>
                                                        
                                                <br />
                                            </div>

                                        </div>
                                    
                                </div>
                                <div class="cf footer">
                                    <p> 
                                        <a href="#" class="btn  btn-style-2">
                                        Cancelar
                                        </a>
                                    
                                    </p>
                                    
                                        <a  id="SaveRain" class="btn  btn-style-2" href="#" disabled>
                                            Guardar
                                        </a>
                                        
                                </div>
                            </div>
                            <div class="overlay"></div>
                        </div>
                        <!-- end modal agregar lluvia --->
                        <!-- modal agregar fenologia--->
                        <div id="modal-fenologia">
                            <div class="modal-content">
                                <div class="header">
                                    <h2>Agregar Fenología</h2>
                                </div>
                                <div class="copy">
                                    <p> </p>
                                    <form role="form">
                                        <div class="form-group">
                                            <div class="dropdown">
                                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                    Seleccionar Fenología
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                                    <li><a href="#">V1</a></li>
                                                    <li><a href="#">V2</a></li>
                                                    <li><a href="#">V3</a></li>
                                                    <li><a href="#">V4</a></li>
                                                </ul>
                                                <br />
                                            </div>
                                            <br />
