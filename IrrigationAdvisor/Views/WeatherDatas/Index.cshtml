@model IEnumerable<IrrigationAdvisor.Models.Weather.WeatherData>

@{
    ViewBag.Title = "Index";
    //Layout = "Weather";
}
<script>
    $(document).ready(function () {

        var dateFrom = $('#dateFrom');
        var dateTo = $('#dateTo');
        var btnSearch = $('#btnSearch');

        $('#dateFrom').val(new Date());
        $('#dateTo').val(new Date());

        btnSearch.click(function ()
        {
            location.href = 'Weatherdatas?pStartDateTime=' + dateFrom.val() + '&pEndDateTime=' + dateTo.val();
        });
    })
</script>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <td>
            Fecha desde: <input type="date" id="dateFrom"/>
        </td>
        <td>
            Fecha hasta: <input type="date" id="dateTo"/>&nbsp;&nbsp; <button id="btnSearch">Buscar</button>
        </td>
    </tr>
</table>
