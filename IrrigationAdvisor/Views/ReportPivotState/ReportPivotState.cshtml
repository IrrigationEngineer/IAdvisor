@model IrrigationAdvisor.ViewModels.Reports.ReportPivotStateViewModel

<section class="content-bar ps-container">
    <div class="container">
        <div class="col-md-11">
            <div class="col-md-4">
                <ul class="bar-resp">
                    <li> <a> <em class="icon md-flag"></em> @Html.DisplayFor(model => model.Title)</a> </li>

                </ul>
            </div>
        </div>


    </div>
    <div class="ps-scrollbar-x-rail" style="width: 1343px; display: none; left: 0px;"><div class="ps-scrollbar-x" style="left: 0px; width: 0px;"></div></div><div class="ps-scrollbar-y-rail" style="top: 0px; height: 53px; display: none;"><div class="ps-scrollbar-y" style="top: 0px; height: 0px;"></div></div>
</section>

<section class="profile">
    <div class="container">
        <div class="col-md-12" style="padding-left:0">
            <div class="tab-content" border="0">
                <table>
                    <tr>
                        <td align="center" style="border-color:white">
                            <img src="@Url.Action("GetChart") ">

                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="border-color:white">

                            <table cellspacing="10" class="main-table-advisor" border="1" style="width:300px" align="center">
                                <thead>
                                    <tr>
                                        <th colspan="2">Entrada y salida de agua</th>
                                    </tr>
                                </thead>
                                <tr>
                                    <td width="50%">
                                        ET Acumulado:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEvapotranspirationCrop)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        Riego:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEffectiveInputWater)
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%">
                                        Lluvia:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEffectiveRain)
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>


                    <tr>
                        <td>
                            @{ if (Model.IsUserAdministrator)
                             {
                                <div class="table-body">
                                    <!--table-->
                                    <table cellspacing="10" class="main-table-advisor" border="1" style="width:400px" align="center">
                                        <thead>
                                            <tr>
                                                @{ Html.RenderAction("ReportPivotStateHeaderPartial", "ReportPivotState"); }

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ Html.RenderAction("ReportPivotStatePartial", "ReportPivotState"); }
                                        </tbody>
                                    </table>
                                </div>
                             }

                            }

                        </td>

                    </tr>
                </table>


            </div>
        </div>
    </div>
</section>


