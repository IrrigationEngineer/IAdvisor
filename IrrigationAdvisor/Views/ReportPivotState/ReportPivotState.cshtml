@model IrrigationAdvisor.ViewModels.Reports.ReportPivotStateViewModel

<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="../css/flatWeatherPlugin.css">
<link rel="stylesheet" type="text/css" href="../css/modal.css">
<link rel="stylesheet" type="text/css" href="../css/style-1.css">
<link rel="stylesheet" type="text/css" href="../css/md-font.css">
<link href="~/css/shared.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/js/Home.js"></script>


<section class="profile">

    <div class="container">
        <div class="col-md-12" style="padding-left:0">
            <div class="tab-content">
                <table border="0">
                    <tr>
                        <td align="center">
                            <img src="@Url.Action("GetChart") ">

                        </td>
                    </tr>
                </table>
                <br>
                <div>
                    <div class="tab-content">
                        <!-- Table -->
                        <div class="tab-pane fade in active">

                            <table cellspacing="10" class="main-table-advisor" border="1" style="width:300px" align="center">
                            <thead>
                                <tr>
                                    <th colspan="2">Entrada y salida de agua</th>
                            </tr>
                            </thead>
                                <tr>
                                    <td width="50%">
                                        ET Acumulado:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEvapotranspirationCrop)
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        Riego:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEffectiveInputWater)
                                    </td>
                                </tr>
                                <tr>
                                    <td width="50%">
                                        Lluvia:
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(model => model.TotalEffectiveRain)
                                    </td>
                                </tr>
                        </table>
                    </div>
                    <br>
                    <!-- Table -->
                    <div class="tab-content">
                        <!-- table header -->
                        <div class="tab-pane fade in active">
                            <div class="table-wrap">

                                @{ if (Model.IsUserAdministrator)
                                 {
                                    <div class="table-body">
                                        <!--table-->
                                        <table cellspacing="10" class="main-table-advisor" border="1" style="width:400px" align="center">
                                            <thead>
                                                <tr>
                                                    @{ Html.RenderAction("ReportPivotStateHeaderPartial", "ReportPivotState"); }

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ Html.RenderAction("ReportPivotStatePartial", "ReportPivotState"); }
                                            </tbody>
                                        </table>
                                    </div>
                                 }

                                }
                            </div>
                        </div>
                    </div>

                </div>                <!-- End Table -->
            </div>
        </div>
</section>


